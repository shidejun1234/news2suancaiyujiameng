<import src="../../../wxParse/wxParse.wxml" />
<view class='page'>
    <view class='top'>
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper' style='height:{{hig}}rpx;'>
            <block wx:for="{{background}}" wx:key="*this">
                <swiper-item>
                    <image src='{{item}}' mode='widthFix' bindload="imageLoad"></image>
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class='news'>
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>
    <view class='btn-bottom'>
        <view class='half' bindtap='call'>
            <image src='../../../images/call3.jpg' mode='widthFix'></image>
        </view>
        <view class='half'>
            <image src='../../../images/liuyan3.jpg' mode='widthFix'></image>
        </view>
    </view>
</view>